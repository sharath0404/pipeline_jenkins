pipeline {
    agent any
    environment {
        BASH_PATH = 'C:/Program Files/Git/bin/bash.exe'
    }

    stages {
        stage('Example') {
            steps {
                script {
                    def command = """\
                    \"${BASH_PATH}\" -c 'aws ec2 describe-instances --region ap-south-1'
                    """
                    bat script: command
                }
            }
        }
    }
}
